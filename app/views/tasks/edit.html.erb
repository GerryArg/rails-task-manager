<!-- app/views/tasks/edit.html.erb -->
<div class="container mt-5">
  <h1>Edit Task</h1>
  <%= form_with model: @task, local: true, class: "mt-3" do |form| %>
    <div class="mb-3">
      <%= form.label :title, class: "form-label" %>
      <%= form.text_field :title, class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= form.label :details, class: "form-label" %>
      <%= form.text_area :details, class: "form-control" %>
    </div>
    <div class="mb-3 form-check">
      <%= form.label :completed, class: "form-check-label" %>
      <%= form.check_box :completed, class: "form-check-input" %>
    </div>
    <div>
      <%= form.submit 'Update Task', class: "btn btn-primary" %>
    </div>
  <% end %>
  <%= link_to 'Back to tasks', tasks_path, class: "btn btn-secondary mt-3" %>
</div>

<!-- app/views/tasks/index.html.erb -->
<div class="container mt-5">
  <h1>Tasks</h1>
  <ul class="list-group">
    <% @tasks.each do |task| %>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <%= link_to task.title, task_path(task) %>
        <div>
          <%= link_to '📝', edit_task_path(task), class: "btn btn-info btn-sm" %>
          <%= link_to '🗑️', task_path(task), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %>
        </div>
      </li>
    <% end %>
  </ul>
  <%= link_to 'New Task', new_task_path, class: "btn btn-primary mt-3" %>
</div>
